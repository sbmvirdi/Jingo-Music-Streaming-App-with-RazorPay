<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".DetailMusic">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/musiclabel"
        android:src="@drawable/musiclabel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musiclabel"
        android:layout_marginTop="30dp"
        android:text="Song Name"
        android:id="@+id/detailsongname"
        android:fontFamily="@font/overpass_semibold"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsongname"
        android:layout_marginTop="30dp"
        android:text="Song Artists"
        android:id="@+id/detailsongartists"
        android:fontFamily="@font/overpass_semibold"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:id="@+id/buy"
        android:background="@drawable/mustardbackground"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:fontFamily="@font/overpass_semibold"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Play Sample"
        android:id="@+id/playsample"
        android:background="@drawable/mustardbackground"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/overpass_semibold"
        />





</RelativeLayout>